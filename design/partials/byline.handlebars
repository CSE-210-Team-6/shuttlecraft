<div class="byline">
    <a href="/private/profile/{{getUsername actor.id}}">
        {{#if actor.icon.url}}
        <img src="{{actor.icon.url}}" class="avatar">
        {{else}}
        <img src="/images/avatar-unknown.png" class="avatar">
        {{/if}}
    </a>
    <div>
        <a href="/private/profile/{{getUsername actor.id}}" class="author">{{actor.name}}</a>
        <span class="handle">{{getUsername actor.id}}</span>
    </div>
</div>
