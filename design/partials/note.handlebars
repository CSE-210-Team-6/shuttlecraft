        {{> byline actor=actor}}
        <div class="content">
            {{#if note.summary}}
            content warning: {{note.summary}}
            {{/if}}
            {{{note.content}}}

            {{#if note.inReplyTo}}
            <p><a href="{{note.inReplyTo}}" class="showThread">Show Thread</a></p>
            {{/if}}

            {{#each note.attachment}}
                <div class="attachment">
                    {{#isImage mediaType}}
                    <a href="{{../url}}" target="_blank"><img src="{{../url}}" alt="{{../name}}" /></a>
                    {{/isImage}}
                    {{#isVideo mediaType}}
                    <video role="application" src="{{../url}}" autoplay="" loop="" controls="true" type="{{../mediaType}}"></video>
                    {{/isVideo}}
                </div>
            {{/each}}
            <footer>
                {{!-- {{#if stats}}
                {{stats.likes}} likes
                {{stats.boosts}} boosts
                {{/if}} --}}
