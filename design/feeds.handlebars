{{#if error}}
<div class="error">
    {{error.message}}
</div>
{{else}}
    <div class="stream">
        {{#if feed}} 
        <header>
            {{> personCard actor=feed}}
        </header>
        {{/if}}
        {{#if activitystream}}
            {{#each activitystream}}
                {{#with this}}
                    <div class="activity">
                        {{#if boost}}
                            <div class="boost">
                            ðŸš€ boosted by <a href="{{booster.url}}">{{booster.name}}</a>
                            </div>
                        {{/if}}
                        {{> note note=note hidebyline=true}}
                    </div>
                {{/with}}
            {{/each}}
        {{else}}
            <!-- TODO: empty state? -->
            <div class="empty">
                Select a conversation. To create a new one, navigate to a profile.
            </div>
        {{/if}}

        {{#if next}}
        <a href="?offset={{next}}" class="moreLink">More</a>
        {{/if}}

    </div>
{{/if}}
<script>
    app.pollForPosts();
</script>